<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Your Essay"
        android:textColor="#EDF2F4"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etEssayText"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/input_field_bg"
        android:gravity="top|start"
        android:hint="Type your essay here..."
        android:padding="16dp"
        android:textColor="#EDF2F4"
        android:textColorHint="#99EDF2F4"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <TextView
        android:id="@+id/tvWordLimit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 / 0 words"
        android:textColor="#A9A9A9"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/etEssayText"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnUploadFile"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#EDF2F4"
        android:text="Upload Essay File"
        android:textColor="#121212"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btnSubmitEssay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etEssayText"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnSubmitEssay"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#EDF2F4"
        android:text="Submit for Grading"
        android:textColor="#121212"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btnBackToDashboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnBackToDashboard"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#EDF2F4"
        android:text="Back to Dashboard"
        android:textColor="#121212"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
